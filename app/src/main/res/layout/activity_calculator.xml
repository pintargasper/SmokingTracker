<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface">

        <LinearLayout
            android:id="@+id/toolbar_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Back to previous screen"
                android:src="@drawable/ic_thin_outline_arrow_back"
                android:background="@android:color/transparent"
                app:tint="?attr/colorOnSurface"
                tools:ignore="HardcodedText" />

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/text_calculator_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/analytics_calculator_title"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_calculator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_daily_cigarettes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator_cigarettes_per_day"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/input_daily_cigarettes"
                    android:layout_width="match_parent"
                    android:maxWidth="300dp"
                    android:layout_height="48dp"
                    android:autofillHints="0"
                    android:inputType="number"
                    android:hint="0"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_cigarettes_per_pack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator_cigarettes_per_pack"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/input_cigarettes_per_pack"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="20"
                    android:inputType="number"
                    android:hint="20"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_pack_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator_price_per_pack"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/input_pack_price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="0.00"
                    android:inputType="numberDecimal"
                    android:hint="0.00"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginBottom="16dp"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator_period"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:id="@+id/layout_date_range_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_start_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculator_start_date"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/input_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/calculator_start_date_hint"
                        android:focusable="false"
                        android:clickable="true"
                        android:hint="@string/calculator_start_date_hint"
                        android:inputType="date"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:layout_marginEnd="8dp"
                        tools:ignore="VisualLintTextFieldSize" />

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_end_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculator_end_date"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/input_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:maxWidth="433dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/calculator_end_date_hint"
                        android:focusable="false"
                        android:clickable="true"
                        android:hint="@string/calculator_end_date_hint"
                        android:inputType="date"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceBody1"
                        tools:ignore="VisualLintTextFieldSize" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_button_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/button_calculate"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="@string/calculator_button_calculate"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:singleLine="true"
                        android:ellipsize="end"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
