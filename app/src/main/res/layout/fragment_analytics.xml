<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_all_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_category_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_analytics"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="5dp"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/calculator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp"
                    android:orientation="vertical">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_calculator_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:singleLine="true"
                        android:text="@string/analytics_calculator_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_calculator_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:scrollHorizontally="false"
                        android:text="@string/analytics_calculator_description"
                        android:singleLine="true"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/achievements_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp"
                    android:orientation="vertical">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_achievements_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:singleLine="true"
                        android:text="@string/analytics_achievements_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_achievements_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:scrollHorizontally="false"
                        android:text="@string/analytics_achievements_description"
                        android:singleLine="true"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statistics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp"
                    android:orientation="vertical">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_statistics_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:singleLine="true"
                        android:text="@string/analytics_statistics_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_statistics_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:scrollHorizontally="false"
                        android:text="@string/statistics_achievements_description"
                        android:singleLine="true"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_data_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_all_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>