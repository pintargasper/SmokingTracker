<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="16dp"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/dialog_background"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/widget_daily_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_daily_label"
            android:textColor="@color/primary"
            android:singleLine="true" />

        <TextView
            android:id="@+id/widget_daily_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/dialog_background"
        android:layout_marginHorizontal="4dp">

        <TextView
            android:id="@+id/widget_weekly_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_weekly_label"
            android:textColor="@color/primary"
            android:singleLine="true" />

        <TextView
            android:id="@+id/widget_weekly_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/dialog_background"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/widget_monthly_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_monthly_label"
            android:textColor="@color/primary"
            android:singleLine="true" />

        <TextView
            android:id="@+id/widget_monthly_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>