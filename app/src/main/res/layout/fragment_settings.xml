<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_all_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_category_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_category_general"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:id="@+id/theme_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_theme_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_theme"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/theme_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/language_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_language_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_language"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp" />

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/language_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notifications_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/text_notifications_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_notifications"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/notifications_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_notifications_url"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_data_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_all_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_category_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_category_data"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnSurface"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/download_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/download_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_download"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/download_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_download_url"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upload_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/upload_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_upload"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/upload_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_upload_url"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_about_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_data_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                    android:id="@+id/text_category_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_category_data_about"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnSurface"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/version_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_version"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/app_version_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_version_view"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/website_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_website"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/website_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/translations_website_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/translations_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_translations_website"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/translations_website_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_translations_website_url"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/privacy_policy_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="55dp">

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_privacy_policy"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="2dp"/>

                    <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                        android:id="@+id/privacy_policy_service_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_category_data_privacy_policy_url"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:clickable="false"
                        android:focusable="false"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:scrollHorizontally="false"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>