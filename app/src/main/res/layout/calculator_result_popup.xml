<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_result_popup_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/colorSurface"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.gasperpintar.smokingtracker.ui.MarqueeTextView
            android:id="@+id/popup_result_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/calculator_result_title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_total_costs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/popup_result_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/label_total_costs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_total_costs_label"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"/>

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/popup_result_total_costs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cost_per_cigarette"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_total_costs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/label_cost_per_cigarette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_cost_per_cigarette"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"/>

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/popup_result_cost_per_cigarette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_average_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_cost_per_cigarette"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/label_average_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_average_cost_per_hour"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"/>

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/popup_result_average_cost_per_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_time_spent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_average_cost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/label_time_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_time_spent_label"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"/>

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/popup_result_time_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOnSurface"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_time_spent" />

        <LinearLayout
            android:id="@+id/layout_average_time_per_cigarette"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/label_average_time_per_cigarette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_average_time_per_cigarette_label"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"/>

            <com.gasperpintar.smokingtracker.ui.MarqueeTextView
                android:id="@+id/popup_result_average_time_per_cigarette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator_result_average_time_per_cigarette_description"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_button_close_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/layout_average_time_per_cigarette"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button_close_result"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="@string/calculator_result_popup_button"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/popup_result_average_time_per_cigarette"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
