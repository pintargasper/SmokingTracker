<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_language_popup_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/colorSurface"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/version_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_popup_title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/izzy_on_droid_website_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="55dp"
            app:layout_constraintTop_toBottomOf="@id/version_popup_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/izzy_on_droid_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_popup_get_it_on_izzy_on_droid"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/izzy_on_droid_website_service_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/google_play_website_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="55dp"
            app:layout_constraintTop_toBottomOf="@id/izzy_on_droid_website_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_close_version_button">

            <TextView
                android:id="@+id/google_play_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_popup_get_it_on_google_play"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/google_play_website_service_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_close_version_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/google_play_website_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_max="320dp">

            <Button
                android:id="@+id/button_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/popup_close"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>